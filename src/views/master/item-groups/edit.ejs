<div class="max-w-xl mx-auto">
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-6"><%= title %></h1>
        
        <form action="/item-groups/<%= group.id %>/edit" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div>
                <label for="name" class="form-label">Group Name</label>
                <input type="text" name="name" id="name" value="<%= group.name %>" required class="form-input mt-1">
            </div>

            <div class="mt-8 flex justify-end space-x-4">
                <a href="/item-groups" class="btn-secondary">Cancel</a>
                <button type="submit" class="btn-primary">Update Group</button>
            </div>
        </form>
    </div>
</div>