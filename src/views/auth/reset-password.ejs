<div class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-2xl shadow-xl">
        <h1 class="text-2xl font-bold text-center">Set a New Password</h1>
        <form action="/reset-password" method="POST" class="space-y-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="token" value="<%= token %>"> <!-- Pass the token -->
            <div>
                <label for="password" class="form-label">New Password</label>
                <input type="password" name="password" id="password" required class="form-input mt-1">
            </div>
            <div>
                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" required class="form-input mt-1">
            </div>
            <div><button type="submit" class="w-full btn-primary">Reset Password</button></div>
        </form>
    </div>
</div>