<div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg space-y-6">
        <h2 class="text-3xl font-bold text-center text-gray-800">Create Your Account</h2>
        
        <form action="/register" method="POST" class="space-y-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div>
                <label for="name" class="form-label">Full Name</label>
                <input type="text" id="name" name="name" class="form-input" required>
            </div>

            <div>
                <label for="email" class="form-label">Email Address</label>
                <input type="email" id="email" name="email" class="form-input" required>
            </div>

            <div>
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" class="form-input" required>
                <%# NAYA: Password length ke liye message yahan dikhega %>
                <div id="password-strength-message" class="text-sm mt-2"></div>
            </div>

            <div>
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" required>
                <div id="password-match-message" class="text-sm mt-2"></div>
            </div>

            <div>
                <button type="submit" id="register-button" class="w-full btn-primary">Register</button>
            </div>
        </form>

        <div class="text-center">
            <p class="text-sm text-gray-600">
                Already have an account? <a href="/login" class="font-medium text-indigo-600 hover:underline">Log In</a>
            </p>
        </div>
    </div>
</div>


<script src="/js/register-form.js"></script>